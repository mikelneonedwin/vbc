{
    "tasks": [
        {
            "label": "VBC",
            "type": "shell",
            "command": "vbc ${file}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": "build"
        }
    ],
    "key": {
        "key": "f5",
        "command": "workbench.action.tasks.runTask",
        "args": {
            "task": "VBC"
        },
        "when": "editorLangId == 'vb' && editorFocus"
    }
}